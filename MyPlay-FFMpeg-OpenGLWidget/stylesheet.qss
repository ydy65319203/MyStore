/* ========== 滑槽X ========== */
QSlider:horizontal#X 
{    
	border: 0px solid #999999;
    border-radius: 10px;
}

QSlider::groove:horizontal#X {
    height: 4px; 
	left:  0px; 
	right: 0px; 
	border: 0px solid #999999;
    border-radius: 2px;
    background-color: rgba(0, 0, 255, 30);
}

QSlider::groove:horizontal:hover#X {
    height: 6px; 
    border-radius: 3px;
    background-color: rgba(250, 0, 0, 80);
}

/* 滑块 */
QSlider::handle:horizontal#X {
    width: 20px; 
	border-radius: 2px;
	background-color:rgb(40, 140, 20);
}

QSlider::handle:horizontal:hover#X {
    width:  20px; 
	height: 50px;   /* 此参数已被margin覆盖*/
  /*border: 1px solid #999999;*/
  /*margin: -7px -7px -7px -7px; */
	margin-top:  -2px; 
	margin-left:  0px; 
	margin-right: 0px;
	margin-bottom: -2px;
	border-radius: 5px;
	background-color:rgb(40, 130, 20);
	/*border-image:url(:/res/images/setting_slider_handle.png);*/
}


QSlider::sub-page:horizontal#X {
    /* background: #AABB55;  */
	background: rgba(10, 200, 10, 100);
	/* background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 rgb(124, 124, 124), stop: 1.0 rgb(72, 71, 71));   */
	/* background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, stop:0 rgba(27, 5, 27, 255), stop:0.25 rgba(99, 20, 102, 255), stop:0.5 rgba(154, 30, 158, 255), stop:1 rgba(173, 57, 176, 255));  */
}


/* ========== 滑槽Y ========== */
QSlider::groove:horizontal#Y {
    border: 0px solid #999999;  /*有边框才有渐变色*/
    height: 4px; 
	left:  0px; 
	right: 0px; 
}

/* 滑块 */
QSlider::handle:horizontal#Y {
    width: 20px; 
	height: 20px; 
	margin-top:  -8px; 
	margin-left:  0px; 
	margin-right: 0px;
	margin-bottom: -8px;
	border-radius: 10px;
	background-color: yellow;
}

QSlider::handle:horizontal:hover#Y {
    width: 8px; 
	height: 8px; 
	margin-top:  -2px; 
	margin-left:  0px; 
	margin-right: 0px;
	margin-bottom: -2px;
	border-radius: 4px;
	background-color: yellow;
}

QSlider::sub-page:horizontal#Y {
    border: 1px dashed #999999;
	/* background: #AABB55; */
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, stop:0 rgba(27, 5, 27, 255), stop:0.25 rgba(99, 20, 102, 255), stop:0.5 rgba(154, 30, 158, 255), stop:1 rgba(173, 57, 176, 255));
}


/* ========== 滑槽Z ========== */
QSlider::groove:horizontal#Z {
    height: 4px; 
	border: 1px solid #FFFFFF;  /* 必须有border语句，等于0也行，否则长宽失控。*/
}

QSlider::handle:horizontal#Z {
    width: 20px; 
	height: 20px; /* 最大高度，否则不圆了。*/
	margin-top:  -8px; 
	margin-left:  0px; 
	margin-right: 0px;
	margin-bottom: -8px;
	border: 0px solid #FFFFFF;
	/* background-color: grey; */
    border-image: url("D:/YDY/SourceCode/MyFFmpeg/MyPicture/add.png");
}


