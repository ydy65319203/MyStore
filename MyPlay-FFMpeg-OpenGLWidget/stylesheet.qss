

QMainWindow#MainWindow
{
    /* border-image: url("D:/YDY/SourceCode/MyFFmpeg/MyPicture/default-LightMusicPlayer.jpg"); */
    border-image: url(:/picture/background-boxboy.jpg);
}

/* ========== Play按钮 ========== */
QPushButton#Play
{
    border-image: url(:/picture/playnormal.png);
	width:54px;
	height:54px;
}

QPushButton:hover#Play
{
    background-color: rgba(0, 0, 0, 30);
}

QPushButton:pressed#Play
{
    border-image: url(:/picture/playhoverpressed.png);
}

QPushButton:disable#Play
{
    background-color: white;
}

QPushButton#Pause
{
    border-image: url(:/picture/pause.png);
}


/* ========== Open按钮 ========== */
QPushButton#Open
{
    border-image: url(:/picture/fileopen.png);
	border-radius: 1px;
	width:24px;
	height:24px;
}

QPushButton#Open:hover
{
    background-color: rgba(0, 0, 0, 0.5);
}

QPushButton#Open:pressed
{
    background-color: rgba(0, 0, 0, 0.9);
}

QLineEdit#FilePath
{
    font:18px;
    font-family:微软雅黑;
    padding:0px 0px 0px 5px;
	border: 0px;
	color: rgba(255, 255, 255, 0.6);
	background-color: rgba(0, 0, 0, 10);
	
	width: 200px;
	height: 24px;
}

QLineEdit#FilePath:hover
{
    font:20px;
    font-family:微软雅黑;
    color: blue;
    padding:0px 0px 0px 5px;
	background-color: rgba(128, 128, 128, 0.8);
}


/* ========== 立方体按钮 ========== */
QPushButton#Cube
{
	color:red;
	width:100px;
	height:50px;
	border: 0px solid grey;
	background-color: rgba(0, 0, 0, 0);
}

QPushButton:hover#Cube
{
	background-color: rgba(0, 0, 0, 50);
}

QPushButton:pressed#Cube
{
	color:red;
	width:100px;
	border: 0px solid grey;
	background-color: rgba(0, 0, 0, 100);
}

/* ========== 梯形环按钮 ========== */
QPushButton#Ring
{
	color:red;
	width:100px;
	height:25px;
	border: 0px solid blue;
}

QPushButton:hover#Ring
{
	color:red;
	border: 1px solid grey;
	background-color: rgba(0, 0, 200, 30);
}



